# Environment
ENVIRONMENT=development

# Backend (Node.js)
NODE_ENV=development
PORT=3000
JWT_SECRET=your-jwt-secret-key-change-in-production
DATABASE_URL=postgresql://admetrics:admetrics123@postgres:5432/admetrics

# Database
POSTGRES_SERVER=postgres
POSTGRES_USER=admetrics
POSTGRES_PASSWORD=admetrics123
POSTGRES_DB=admetrics

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379

# Email
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@admetrics.com
EMAILS_FROM_NAME=AdMetrics

# AWS (for S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
REPORT_STORAGE_BUCKET=admetrics-reports

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# AI Engine (Flask)
AI_ENGINE_URL=http://localhost:5000
FLASK_ENV=development
AI_ENGINE_PORT=5000

# Sentry (optional)
SENTRY_DSN=

# Bull Queue (Node.js alternative to Celery)
QUEUE_REDIS_URL=redis://:redis123@redis:6379